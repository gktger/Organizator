@model List<MeetUpEvent.Entity.Organization>
@helper titleLength(string title)
{
    if (title.Length > 30)
    {
        <marquee>@title</marquee>
    }
    else
    {
        @title
    }
}
<!--cover section slider -->
<section id="home" class="home-cover">
    <div class="cover_slider owl-carousel owl-theme">
        @foreach (var organizations in Model)
        {
            <div class="cover_item" style="background: url('@organizations.Image');">
                <div class="slider_content">
                    <div class="slider-content-inner">
                        <div class="container">
                            <div class="slider-content-center">
                                <h2 class="cover-title">
                                    @titleLength(organizations.OrganizationTitle)

                                </h2>
                                <strong class="cover-xl-text">@organizations.Category.CategoryName</strong>
                                <p class="cover-date">
                                    @organizations.ApplicationDate.ToShortDateString() - @organizations.City
                                </p>
                                <a href="#" class=" btn btn-primary btn-rounded">
                                    Bize Katıl

                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
    <div class="cover_nav">
        <ul class="cover_dots">
            <li class="active" data="0"><span>1</span></li>
            <li data="1"><span>2</span></li>
            <li data="2"><span>3</span></li>
        </ul>
    </div>
</section>
<!--cover section slider end -->
